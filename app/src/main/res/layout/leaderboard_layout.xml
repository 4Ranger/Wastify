<?xml version="1.0" encoding="utf-8"?>
<com.faltenreich.skeletonlayout.SkeletonLayout
    android:id="@+id/skeleton_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="35dp"
    android:layout_marginTop="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="horizontal"
        android:gravity="center|start">

        <FrameLayout
            android:layout_width="35dp"
            android:layout_height="35dp">

            <ImageView
                android:id="@+id/iv_rank1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_rank1"
                tools:ignore="ContentDescription"
                android:visibility="gone"
                tools:visibility="visible"/>

            <ImageView
                android:id="@+id/iv_rank2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_rank2"
                tools:ignore="ContentDescription"
                android:visibility="gone"
                tools:visibility="visible"/>

            <ImageView
                android:id="@+id/iv_rank3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_rank3"
                tools:ignore="ContentDescription"
                android:visibility="gone"
                tools:visibility="visible"/>

            <TextView
                android:id="@+id/tv_rank"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/rank"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:textSize="20sp"
                style="@style/manropeBold"
                android:visibility="gone"
                tools:visibility="visible"/>
        </FrameLayout>

        <TextView
            android:id="@+id/tv_username"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="@string/username"
            style="@style/manropeMedium"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:ems="15"
            android:maxLines="1"
            android:ellipsize="end"/>

        <TextView
            android:id="@+id/tv_points"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="@string/user_point"
            style="@style/manropeMedium"/>
    </LinearLayout>
</com.faltenreich.skeletonlayout.SkeletonLayout>