<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.scan.ScanFragment1"
    android:background="@color/white">

    <TextView
        android:id="@+id/tvPanduan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/panduan_foto"
        android:textSize="32sp"
        style="@style/manropeBold"
        android:textColor="@color/green"
        android:layout_marginTop="80dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivPanduan"
        android:layout_width="300dp"
        android:layout_height="370dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/tvPanduan"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/image_preview"
        android:scaleType="fitXY"/>

    <TextView
        android:id="@+id/tvPerhatikan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/perhatikan_background"
        android:textSize="20sp"
        style="@style/manropeBold"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivPanduan"/>

    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/panduan_desc"
        android:textAlignment="center"
        android:textSize="14sp"
        style="@style/manropeMedium"
        android:textColor="@color/dark_gray"
        android:ems="14"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvPerhatikan" />

    <TextView
        style="@style/manropeBold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:drawablePadding="5dp"
        android:text="@string/start"
        android:textSize="20sp"
        app:drawableEndCompat="@drawable/ic_arrow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.835"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvDescription" />
</androidx.constraintlayout.widget.ConstraintLayout>