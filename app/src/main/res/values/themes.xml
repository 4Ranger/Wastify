<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Wastify" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:statusBarColor">@color/white</item>
    </style>

    <style name="manropeRegular">
        <item name="fontFamily">@font/manrope_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="manropeBold">
        <item name="fontFamily">@font/manrope_bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="manropeExtraBold">
        <item name="fontFamily">@font/manrope_extra_bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="manropeExtraLight">
        <item name="fontFamily">@font/manrope_extra_light</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="manropeMedium">
        <item name="fontFamily">@font/manrope_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="manropeLight">
        <item name="fontFamily">@font/manrope_light</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="manropeSemiBold">
        <item name="fontFamily">@font/manrope_semi_bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="custom_input" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="android:textColorHint">@color/green</item>
        <item name="hintTextColor">@color/green</item>
        <item name="boxStrokeColor">@color/ti_box_stroke</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="boxCornerRadiusBottomEnd">14dp</item>
        <item name="boxCornerRadiusBottomStart">14dp</item>
        <item name="boxCornerRadiusTopEnd">14dp</item>
        <item name="boxCornerRadiusTopStart">14dp</item>
    </style>

    <style name="Theme.Wastify" parent="Base.Theme.Wastify" />
</resources>